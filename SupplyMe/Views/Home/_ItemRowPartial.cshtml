@model SupplyMe.Models.OrderDetailsVM

@if (Model != null)
{
    <div class="item order-detail">
        <div class="col-lg-6">
            <select onchange="getItems(this);" class="order-detail-item">
                <option value="" disabled selected>SELECT CATEGORY</option>
                @foreach (var cat in ViewBag.Cats)
                {
                    <option value="@cat.ID">@cat.Name</option>
                }
            </select>
            <input type="hidden" class="cat-id" value="0" />
        </div>
        <div class="col-lg-5 item-parent">
            <select onchange="selectItem(this);" class="order-detail-item">
                <option value="" disabled selected>SELECT ITEM</option>
            </select>
            <input type="hidden" class="item-id" value="0" />
        </div>
        <div class="col-lg-1 remove-item">
            <button class="pull-left order-detail-delete" onclick="removeItem(this);return false;"><i class="fa fa-minus"></i></button>
        </div>
        <div class="clear-fix"></div>
        <div class="col-lg-12">
            <textarea class="full-width order-detail-msg" placeholder="Type order details here">@Model.OrderMessage</textarea>
        </div>
    </div>
    
}